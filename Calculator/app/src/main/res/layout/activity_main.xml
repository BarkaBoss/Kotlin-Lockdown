<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:background="@color/colorBG"
    android:gravity="bottom"
    android:padding="2dp"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/calField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        android:paddingRight="10dp"
        android:textColor="@color/colorText"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="40sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:textColor="@color/colorText"
                android:background="@color/colorAction"
                android:layout_margin="1dp"
                android:text="%" />

            <Button
                android:id="@+id/button3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:textColor="@color/colorText"
                android:background="@color/colorAction"
                android:layout_margin="1dp"
                android:text="CE" />

            <Button
                android:id="@+id/button2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:textColor="@color/colorText"
                android:background="@color/colorAction"
                android:layout_margin="1dp"
                android:text="C" />

            <Button
                android:id="@+id/button"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:textColor="@color/colorText"
                android:background="@color/colorAction"
                android:layout_margin="1dp"
                android:text="del" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnOneOver"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1dp"
                android:background="@color/colorAction"
                android:onClick="divByOne"
                android:text="1/x"
                android:textColor="@color/colorText" />

            <Button
                android:id="@+id/btnSq"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1dp"
                android:background="@color/colorAction"
                android:onClick="squareRoot"
                android:text="x^2"
                android:textColor="@color/colorText" />

            <Button
                android:id="@+id/btnSqRoot"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1dp"
                android:background="@color/colorAction"
                android:onClick="squareNum"
                android:text="sq(x)"
                android:textColor="@color/colorText" />

            <Button
                android:id="@+id/btnDiv"
                android:layout_width="30pt"
                android:layout_height="66dp"
                android:layout_margin="1dp"
                android:background="@color/colorAction"
                android:onClick="mathOps"
                android:text="/"
                android:textColor="@color/colorText" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1dp"
                android:background="@color/colorNumbs"
                android:onClick="numbBtnClicked"
                android:text="7"
                android:textColor="@color/colorText" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1dp"
                android:background="@color/colorNumbs"
                android:onClick="numbBtnClicked"
                android:text="8"
                android:textColor="@color/colorText" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1dp"
                android:background="@color/colorNumbs"
                android:onClick="numbBtnClicked"
                android:text="9"
                android:textColor="@color/colorText" />

            <Button
                android:id="@+id/btnMul"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1dp"
                android:background="@color/colorAction"
                android:onClick="mathOps"
                android:text="X"
                android:textColor="@color/colorText" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1dp"
                android:background="@color/colorNumbs"
                android:onClick="numbBtnClicked"
                android:text="4"
                android:textColor="@color/colorText" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1dp"
                android:background="@color/colorNumbs"
                android:onClick="numbBtnClicked"
                android:text="5"
                android:textColor="@color/colorText" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1dp"
                android:background="@color/colorNumbs"
                android:onClick="numbBtnClicked"
                android:text="6"
                android:textColor="@color/colorText" />

            <Button
                android:id="@+id/btnSub"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1dp"
                android:background="@color/colorAction"
                android:onClick="mathOps"
                android:text="-"
                android:textColor="@color/colorText" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1dp"
                android:background="@color/colorNumbs"
                android:onClick="numbBtnClicked"
                android:text="1"
                android:textColor="@color/colorText" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1dp"
                android:background="@color/colorNumbs"
                android:onClick="numbBtnClicked"
                android:text="2"
                android:textColor="@color/colorText" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1dp"
                android:background="@color/colorNumbs"
                android:onClick="numbBtnClicked"
                android:text="3"
                android:textColor="@color/colorText" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1dp"
                android:background="@color/colorAction"
                android:onClick="mathOps"
                android:text="+"
                android:textColor="@color/colorText" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnPlusMinus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1dp"
                android:background="@color/colorNumbs"
                android:onClick="numbBtnClicked"
                android:text="+/-"
                android:textColor="@color/colorText" />

            <Button
                android:id="@+id/btnZero"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1dp"
                android:background="@color/colorNumbs"
                android:onClick="numbBtnClicked"
                android:text="0"
                android:textColor="@color/colorText" />

            <Button
                android:id="@+id/btnDot"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1dp"
                android:background="@color/colorNumbs"
                android:onClick="numbBtnClicked"
                android:text="."
                android:textColor="@color/colorText" />

            <Button
                android:id="@+id/button24"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1dp"
                android:background="@color/colorEquals"
                android:onClick="resolveCalc"
                android:text="="
                android:textColor="@color/colorText" />
        </TableRow>
    </TableLayout>
</LinearLayout>