<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MathActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:orientation="horizontal">
        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rbRange1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_marginLeft="3dp"
                android:textSize="10sp"
                android:buttonTint="@color/colorTxt"
                android:background="@drawable/numb_range"
                android:textColor="@color/colorTxt"
                android:onClick="rangeSelected"
                android:text="0-20"/>
            <RadioButton
                android:id="@+id/rbRange2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorTxt"
                android:layout_marginLeft="3dp"
                android:textSize="10sp"
                android:background="@drawable/numb_range"
                android:textColor="@color/colorTxt"
                android:onClick="rangeSelected"
                android:text="20-40"/>
            <RadioButton
                android:id="@+id/rbRange3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorTxt"
                android:layout_marginLeft="3dp"
                android:textSize="10sp"
                android:background="@drawable/numb_range"
                android:textColor="@color/colorTxt"
                android:onClick="rangeSelected"
                android:text="40-60"/>
            <RadioButton
                android:id="@+id/rbRange4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorTxt"
                android:layout_marginLeft="3dp"
                android:textSize="10sp"
                android:background="@drawable/numb_range"
                android:textColor="@color/colorTxt"
                android:onClick="rangeSelected"
                android:text="60-80"/>
            <RadioButton
                android:id="@+id/rbRange5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorTxt"
                android:layout_marginLeft="3dp"
                android:textSize="10sp"
                android:background="@drawable/numb_range"
                android:textColor="@color/colorTxt"
                android:onClick="rangeSelected"
                android:text="80-100"/>
        </RadioGroup>
